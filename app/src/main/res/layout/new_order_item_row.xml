<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:id="@+id/frame3"
   android:paddingBottom="5dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/order1"
    android:layout_height="wrap_content"
    android:background="@color/bgContent"
    android:baselineAligned="false"
    android:orientation="horizontal">

    <!-- LEFT TITLE PART -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="155dp"
        android:layout_weight="3"
        android:background="#008ae6"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingTop="20dp"
        android:paddingRight="10dp"
        android:paddingBottom="20dp">

        <TextView
            android:id="@+id/ordernumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="512"
            android:textAlignment="center"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/order_title_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="500000.00"
            android:textAlignment="center"
            android:layout_below="@id/ordernumber"
            android:layout_alignParentLeft="true"
            android:textColor="@android:color/white"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/order_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_alignParentStart="true"
            android:text="15-2-2018"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:textColor="@android:color/white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/order_dispatch_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/order_date"
            android:layout_alignParentStart="true"
            android:text="15-2-2018"
            android:textAlignment="center"
            android:layout_alignParentLeft="true"
            android:textColor="@android:color/white"
            android:textSize="14sp" />


    </RelativeLayout>
    <!-- RIGHT TITLE PART -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#e8eaea"
        android:paddingStart="15dp"
        android:paddingLeft="15dp"
        android:paddingTop="20dp"
        android:paddingEnd="10dp"
        android:paddingRight="20dp"
        android:paddingBottom="10dp">


        <TextView
            android:id="@+id/order_customer_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Anup Dabadvakar"
            android:layout_marginTop="-5dp"

            android:ellipsize="marquee"
            android:fadingEdge="horizontal"
            android:singleLine="true"
            android:textColor="@android:color/black"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/Image_order_adreess"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/order_customer_name"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:src="@color/contentDividerLine" />

        <TextView
            android:id="@+id/order_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/Image_order_adreess"

            android:layout_marginTop="7dp"
            android:ellipsize="marquee"
            android:fadingEdge="horizontal"
            android:maxLines="4"
            android:singleLine="false"
            android:text="Gensh Nagar Old Ausa Road Latur"
            android:textColor="@android:color/black"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:visibility="visible"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/requests_count_badge"

                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/order_customer_gst_no"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="500"
                    android:textAlignment="center" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:visibility="gone"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/weight_badge"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/title_weight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/weight_mock"
                    android:textAlignment="center" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:visibility="visible"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/pledge_badge"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/order_customer_mo_no"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="500"
                    android:textAlignment="center" />


            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
</FrameLayout>